    @*<script src="~/Themes/KlickAndGo/Content/cdn.shopify.com/s/assets/checkout_2017-09-19-3bb09355085bf13b64bea607e9196470733e44061824553835d1c1338d06c156.js"></script>*@
<style>
    h3 {
        position: relative;
        font-size: 20px;
        z-index: 1;
        overflow: hidden;
        text-align: center;
        color: #06c;
        font-weight: 500;
        padding: 10px;
        margin-left: 10px;
        margin-right: 10px;
    }

        h3:before, h3:after {
            position: absolute;
            top: 51%;
            overflow: hidden;
            width: 50%;
            height: 2px;
            content: '\a0';
            background-color: #06c;
            padding-right: 10px;
        }

        h3:before {
            margin-left: -50%;
            text-align: right;
        }

    .color {
        background-color: #ccc;
    }
</style>
}

<div class="container-fluid" style="background-color:#215d9f">
   
        <div class="image pull-left">
            <img src="~/Themes/KlickAndGo/Content/cdn.shopify.com/s/files/1/0882/5910/files/newlogo.png" width="140" height="140" alt="Klick&Go" class="img-responsive" />
        </div>
        <div class="pull-right" style="margin-top:5px;">
            <p style="font-size:medium; color:white; font-weight:200"><span class="fa fa-lock"></span> Secure Checkout &nbsp;&nbsp;&nbsp;<span class="fa fa-phone"></span>@Settings.Get.StorePhone</p>
        </div>
    
</div>
<div class="clearfix"></div>
<div class="container" style="padding-top:20px;padding-bottom:20px">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" @*style="height:300px; background-color:aqua"*@>
            <h3>Customer Information</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(x => x.FirstName)
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "validator" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.LastName)
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "validator" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ShippingEmail)
                    @Html.TextBoxFor(x => x.ShippingEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ShippingEmail, null, new { @class = "validator" })
                </div>
                <div class="form-group">
                    <div class="form-inline">
                        @Html.RadioButtonFor(x => x.IsLocalPickup, LocalPickup.No, new { @class = "input-radio", style = "margin-left:20px" }) Via Shipping Carrier
                        @Html.RadioButtonFor(x => x.IsLocalPickup, LocalPickup.Yes, new { @class = "input-radio" }) In-Store Pickup
                        @Html.ValidationMessageFor(x => x.IsLocalPickup, null, new { @class = "validator" })
                    </div>
                </div>
                 <div class="form-group">
                    <label>Shipping Addres</label>
                    @Html.TextBoxFor(x => x.ShippingAddress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ShippingAddress, null, new { @class = "validator" })
                </div>
                <div class="form-group">
                   <label>Address Line 1 (Optional)</label>
                    @Html.TextBoxFor(x => x.AddressLine, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ShippingCity)
                    @Html.TextBoxFor(x => x.ShippingCity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ShippingCity, null, new { @class = "validator" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Country)
                    @Html.DropDownListFor(x => x.Country, Framework.Mvc.MvcHelper.CountryList(), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ShippingPostCode)
                    @Html.TextBoxFor(x => x.ShippingPostCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ShippingPostCode, null, new { @class = "validator" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ShippingPhone)
                    @Html.TextBoxFor(x => x.ShippingPhone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ShippingPhone, null, new { @class = "validator" })
                </div>
                
                    <button name="button" type="submit" class="btn btn-primary pull-right ">
                        Continue To Payment &rarr;
                    </button>
                    <a class="btn btn-warning pull-left" href="@Url.Action("Index", "Cart")">&larr; Return to Cart</a>
                
            </div>
            }
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="height:500px;  background-color:whitesmoke">
            <h3>Order Details</h3>
            <div class="table table-responsive table-striped">
                <table class="table">
                    <thead style="background-color:#215d9f; color:white">
                        <tr>
                            <td>Sku</td>
                            <td>Product Title</td>
                            <td>Qty</td>
                            <td>Price</td>
                        </tr>
                    </thead>
                    <tbody>
                     @foreach (var a in ViewBag.CartDetails as List<Framework.Data.CartItem>)
                     {
                        <tr>
                            <td>@a.Sku</td>
                            <td>@a.Title</td>
                            <td>@a.Quantity</td>
                            <td>@a.RetailPrice</td>
                        </tr>
                     }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>



@section foot{
    <script type="text/javascript" src="~/Scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}


