
@model WebsiteUI.Models.RegisterModel

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Themes/KlickAndGo/Views/Shared/_CheckoutLayout.cshtml";
}


@section head{
    <style type="text/css">
        .validator {
            color: red;
        }
    </style>
