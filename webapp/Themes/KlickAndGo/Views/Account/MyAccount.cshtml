<div id="content"style="background-color: #ffffff;">
    <div class="container">


            <div class="row mt20">

             
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.Raw(TempData["StatusMessage"] == null ? "" : TempData["StatusMessage"].ToString())
                    
                    <div class="sfbox box-registration">
                        <div class="col-md-6  col-sm-8 ">

                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.Email)
                                </label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "txtbox" })
                                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "validator" })
                            </div>

                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.Gender)
                                </label>
                                <label>@Html.RadioButtonFor(x => x.Gender, Gender.Male) Male</label>
                                <label>@Html.RadioButtonFor(x => x.Gender, Gender.Female) Female</label>
                                @Html.ValidationMessageFor(x => x.Gender, null, new { @class = "validator" })
                            </div>
                            <div class="frm" style="margin-top:11px;">
                                <label class="lbltxt">@Html.LabelFor(x => x.DateOfBirth, new { @type = "datetime" })</label>
                                @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "txtbox" })
                                @Html.ValidationMessageFor(x => x.DateOfBirth, null, new { @class = "validator" })


                            </div>

                            <div class="frm">
                                <label class="lbltxt">@Html.LabelFor(x => x.Country)</label>
                                @Html.DropDownListFor(x => x.Country, Framework.Mvc.MvcHelper.CountryList(), new { @class = "txtbox" })
                            </div>
                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.City)
                                </label>
                                @Html.TextBoxFor(x => x.City, new { @class = "txtbox" })
                                @Html.ValidationMessageFor(x => x.City, null, new { @class = "validator" })
                            </div>
                        </div>

                        <div class="col-md-6  col-sm-8 ">

                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.Phone)
                                </label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "txtbox", maxlength = "21" })
                                @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "validator" })
                            </div>
                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.PostalCode)
                                </label>
                                @Html.TextBoxFor(x => x.PostalCode, new { @maxlength = "6", @class = "txtbox" })
                                @Html.ValidationMessageFor(x => x.PostalCode, null, new { @class = "validator" })
                            </div>
                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.PostalAddress)
                                </label>
                                @Html.TextBoxFor(x => x.PostalAddress, new { @class = "txtbox" })

                                @Html.ValidationMessageFor(x => x.PostalAddress, null, new { @class = "validator" })
                            </div>
                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.Password)
                                </label>
                                @Html.PasswordFor(x => x.Password, new { @class = "txtbox" })
                                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "validator" })
                            </div>
                            <div class="frm">
                                <label class="lbltxt">
                                    @Html.LabelFor(x => x.ConfirmPassword)
                                </label>
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "txtbox" })
                                @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "validator" })


                            </div>


                        </div>
                        <div class="row">
                            <input type="submit" class="btn_c" style="float:right;" value="Save" />

                        </div>
                    </div>
                 
                       


                }
            </div>

   
                    </div>

          

</div>

