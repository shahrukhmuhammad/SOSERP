@model List<CMS.Entity.CmsFile>
@{
    ViewBag.Title = "File Manager";
}

<div class="form-Modal">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@ViewBag.Title</h4>
            <div class="btn-group btn-group-xs" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-angle-left"></i> Back</a>
                <a href="javascript://" onclick="deleteMultipleRecords('@Url.Action("DeleteMultiple")', '.checkIt')" class="btn btn-danger forceRedirect"><i class="fa fa-trash"></i> Delete</a>
            </div>
        </div>
        <div class="modal-body">
            <form id="frm" method="post" enctype="multipart/form-data" class="row">
                @Html.AntiForgeryToken()
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        <label>Upload Files</label>
                        <div class="input-group">
                            <input type="file" class="form-control input-sm" id="files" name="files" multiple required autofocus />
                            <div class="input-group-btn"><button type="submit" class="btn btn-sm btn-success"><i class="fa fa-upload"></i> Upload</button></div>
                        </div>
                    </div>
                    <div class="alert alert-info no-margin" role="alert"> <strong>Note: </strong> You can use these files everywhere in the system by using appropriate filenames. </div>
                </div>
            </form>
            <hr />
