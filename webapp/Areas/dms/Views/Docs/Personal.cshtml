
@{
    ViewBag.Title = "Personal Documents";
}
@section styles{
    <link href="~/Content/DMS/dms.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-8">
        <div>@Html.Action("RenderDms", "Docs", new { path = "/dms/Users/" + CurrentUser.Code + "/", viewMode = "list", area = "DMS" })</div>
    </div>
    <div class="col-md-4">
        <form class="form-group">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search favourites" required autofocus />
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form>

        <!-- Sticky Notes -->
        <div class="row">
            <div class="col-md-12">
                <div class="thumbnail stickyNote">
                    <div class="toolbar">
                        <span class="title">Note #1</span>
                        <a class="badge-right" href="javascript://"><i class="fa fa-times"></i></a>
                    </div>
                    <div class="caption">
                        <p>Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="thumbnail text-center">
                    <img src="~/Content/Images/logo.png">
                    <div class="caption">
                        <h5>File 1</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="thumbnail text-center">
                    <img src="~/Content/Images/logo.png">
                    <div class="caption">
                        <h5>File 2</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/flowplayer/flowplayer-3.2.13.min.js"></script>
    <script src="~/Scripts/DMS/dms.js"></script>
}