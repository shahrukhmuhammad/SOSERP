    <script>
        $(function () {
            $(".user-timesheets").click(function (ev) {
                $('#loading-mask').show();
                ev.preventDefault();
                var dataId = $(this).attr("data-id");
                var target = "";
                if (dataId === "") {
                    target = "/Secure/Employee/_AllTimesheets/";
                }
                else {
                    target = "/Secure/Employee/_AllTimesheets/" + dataId;
                }


                // load the url and show modal on success
                $("#user-timesheets-Modal .modal-dialog").load(target, function () {
                    $("#user-timesheets-Modal").modal("show");
                    $('#loading-mask').hide();
                });
            });

            // Init timer start
            $('.start-timer-btn').on('click', function () {
                $('#stopwatch').timer();
                $(this).attr('disabled');
            });

            // Remove timer
            $('.remove-timer-btn').on('click', function () {
                $('#stopwatch').timer('remove');
                $(this).attr('disabled');
            });
            
            // Hide Timesheet Container
            $("#hide-timesheet-Container").click(function (ev) {
                $('#timesheet-Container').hide();
                $("#div-Loader").show();

                setTimeout(function () {
                    $("#div-Loader").hide();
                    
                    $('#timesheet-Submission-Container').show();
                }, 5000);
            });

            // Show Timesheet Container
            $("#show-timesheet-Container").click(function (ev) {
                $('#timesheet-Submission-Container').hide();
                $('#timesheet-Container').show();
            });
        });
    </script>

