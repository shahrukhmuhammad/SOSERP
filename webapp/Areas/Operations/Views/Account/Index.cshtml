                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    Address Line 2
                                </div>
                                <div class="col-xs-9">
                                    @Model.AddressLine2
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    Zip Code
                                </div>
                                <div class="col-xs-9">
                                    @Model.ZipCode
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    City
                                </div>
                                <div class="col-xs-9">
                                    @Model.City
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    State
                                </div>
                                <div class="col-xs-9">
                                    @Model.State
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    Country
                                </div>
                                <div class="col-xs-9">
                                    @Html.CountriesListWithCode().Where(x => x.Value == Model.Country).FirstOrDefault().Text
                                </div>
                            </div>
                        </div>
                    </div>

                    @foreach (var x in extras.Where(x => x.Section == "Address").ToList())
                    {
                        foreach (var f in x.Fields)
                        {
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    @f.FieldName
                                </div>
                                <div class="col-xs-9">
                                    @if (f.FieldType == "checkbox")
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() == null ? (string.IsNullOrEmpty(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value) ? Html.Raw("<i class='fa fa-times text-danger'></i>") : Html.Raw("<i class='fa fa-times text-danger'></i>")) : Html.Raw("<i class='fa fa-check text-success'></i>"))
                                    }
                                    else
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() != null ? Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value : "")
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            @foreach (var x in extras)
            {
                if (!x.IsSystem)
                {
                    if (!x.ParentId.HasValue)
                    {
                        <div class="row tb-padding">
                            <div class="col-sm-12">
                                <div class="page-header">
                                    <h4>@x.Section</h4>
                                </div>
                                <div class="page-body">
                                    @if (x.Fields != null)
                                    {
                                        foreach (var f in x.Fields)
                                        {
                                            <div class="row form-group">
                                                <div class="col-xs-3 text-right">
                                                    @f.FieldName
                                                </div>
                                                <div class="col-xs-4">
                                                    @if (f.FieldType == "checkbox")
                                                    {
                                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() == null ? Html.Raw("") : (string.IsNullOrEmpty(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value) ? Html.Raw("<i class='fa fa-times text-danger'></i>") : Html.Raw("<i class='fa fa-times text-danger'></i>")))
                                                    }
                                                    else
                                                    {
                                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() != null ? Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value : "")
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
        <div role="tabpanel" class="tab-pane fade" id="schedules">....</div>
