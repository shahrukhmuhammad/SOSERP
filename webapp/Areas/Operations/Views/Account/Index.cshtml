                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="summary">
            <div class="row tb-padding">
                <div class="col-sm-4">
                    <div class="page-header">
                        <h4>Telephone</h4>
                    </div>
                    <div class="row">
                        <div class="col-xs-3 text-right">
                            Home
                        </div>
                        <div class="col-xs-9">
                            @Model.HomePhone
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3 text-right">
                            Work
                        </div>
                        <div class="col-xs-9">
                            @Model.WorkPhone
                        </div>
                    </div>
                    @foreach (var x in extras.Where(x => x.Section == "Telephone").ToList())
                    {
                        foreach (var f in x.Fields)
                        {
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    @f.FieldName
                                </div>
                                <div class="col-xs-9">
                                    @if (f.FieldType == "checkbox")
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() == null ? (string.IsNullOrEmpty(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value) ? Html.Raw("<i class='fa fa-times text-danger'></i>") : Html.Raw("<i class='fa fa-times text-danger'></i>")) : Html.Raw("<i class='fa fa-check text-success'></i>"))
                                    }
                                    else
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() != null ? Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value : "")
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="col-sm-4">
                    <div class="page-header">
                        <h4>Email</h4>
                    </div>
                    <div class="row">
                        <div class="col-xs-3 text-right">
                            Primary
                        </div>
                        <div class="col-xs-9">
                            @Model.Email
                        </div>
                    </div>
                    @foreach (var x in extras.Where(x => x.Section == "Email").ToList())
                    {
                        foreach (var f in x.Fields)
                        {
                            <div class="row">
                                <div class="col-xs-3 text-right">
                                    @f.FieldName
                                </div>
                                <div class="col-xs-9">
                                    @if (f.FieldType == "checkbox")
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() == null ? (string.IsNullOrEmpty(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value) ? Html.Raw("<i class='fa fa-times text-danger'></i>") : Html.Raw("<i class='fa fa-times text-danger'></i>")) : Html.Raw("<i class='fa fa-check text-success'></i>"))
                                    }
                                    else
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() != null ? Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value : "")
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="col-sm-4">
                    <div class="page-header">
                        <h4>Vitals</h4>
                    </div>
                    <div class="row">
                        <div class="col-xs-5 text-right">
                            Date of Birth
                        </div>
                        <div class="col-xs-7">
                            @Model.DateOfBirth.ToShortDateString()
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5 text-right">
                            Gender
                        </div>
                        <div class="col-xs-7">
                            @Model.Gender
                        </div>
                    </div>

                    @foreach (var x in extras.Where(x => x.Section == "Vitals").ToList())
                    {
                        foreach (var f in x.Fields)
                        {
                            <div class="row">
                                <div class="col-xs-5 text-right">
                                    @f.FieldName
                                </div>
                                <div class="col-xs-7">
                                    @if (f.FieldType == "checkbox")
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() == null ? (string.IsNullOrEmpty(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value) ? Html.Raw("<i class='fa fa-times text-danger'></i>") : Html.Raw("<i class='fa fa-times text-danger'></i>")) : Html.Raw("<i class='fa fa-check text-success'></i>"))
                                    }
                                    else
                                    {
                                        @(Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault() != null ? Model.Extras.Where(e => e.ExtraId == f.Id).FirstOrDefault().Value : "")
                                    }
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
            <div class="row tb-padding">
                <div class="col-sm-12">
                    <div class="page-header">
                        <h4>Address</h4>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-xs-3 text-right">
