@model BaseApp.Entity.AppUser
@{
    ViewBag.Title = Model.FullName;
    var extras = ViewBag.Extras as List<BaseApp.Entity.ExtraFieldSection>;
}

@section styles{
    <link href="~/Content/activityStream.css" rel="stylesheet" />
<style>
    .summaryView-btns > .btn {
        width: 115px;
    }

    .dms-frame {
        height: 477px;
    }

    .ae-editable {
        height: 270px;
