
@{
    ViewBag.Title = "Time Sheets";
    Layout = "~/Areas/Secure/Views/Shared/_Layout.cshtml";
}

<div class="form-Modal">
    <div class="modal-content bg-transparent">
        <div class="modal-header">
            <h4 class="modal-title">@ViewBag.Title</h4>
            <div class="btn-group btn-group-xs" role="group">
                <a href="javascript://" id="back-btn" class="btn btn-default"><i class="fa fa-angle-left"></i> Back</a>
                <a href="javascript://" onclick="deleteMultipleRecords('@Url.Action("DeleteMultipleEmployees")', '.checkIt')" class="btn btn-danger forceRedirect"><i class="fa fa-thumbs-down"></i> Reject</a>
                <a href="javascript://" onclick="deleteMultipleRecords('@Url.Action("DeleteMultipleEmployees")', '.checkIt')" class="btn btn-warning forceRedirect"><i class="fa fa-briefcase"></i> Request more details</a>
                <a href="javascript://" onclick="deleteMultipleRecords('@Url.Action("DeleteMultipleEmployees")', '.checkIt')" class="btn btn-success forceRedirect"><i class="fa fa-check"></i> Approve</a>
                <div class="btn-group btn-group-xs" role="group">
                    <button type="button" class="btn btn-primary" aria-haspopup="true">
                        <i class="fa fa-plus"></i> Create New
                    </button>
                </div>
            </div>
        </div>
        <div class="modal-body">
            <div class="table-responsive">
                <table id="timesheet-grid" class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th><input type="checkbox" onchange="checkAll(this, 'checkIt')" /></th>
                            <th>TS-Code</th>
                            <th>Employee Id</th>
                            <th>Employee Name</th>
                            <th>Duration</th>
                            <th>Office</th>
                            <th>Submission Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 3; i++)
                        {
                            <tr>
                                <td>
                                    @if (CurrentUser.HasAnyPermission(BaseApp.Entity.AppPermission.All, BaseApp.Entity.AppPermission.Contact))
                                    {
                                        <input type="checkbox" class="checkIt" value="" />
                                    }
                                </td>
                                <td>TS-@i</td>
                                <td>@i</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <a href="~/Secure/Employee/TimesheetDetails/@Guid.Empty" class="btn btn-info btn-xs">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
<script src="~/Scripts/App/Timesheet.js"></script>
    <script>
        $(function () {
            
        });
    </script>
}