<script>
    function PullItems(e, f) {
        if($('.box-section').val() == "AssignTo") {
            $('#select-AssignTo')[0].selectize.addOption({ value: e, text: e }); //option can be created manually or loaded using Ajax
            $('#select-AssignTo')[0].selectize.addItem(e);
        }
        else if($('.box-section').val() == "ManagedBy") {
            $('#select-ManagedBy')[0].selectize.addOption({ value: e, text: e }); //option can be created manually or loaded using Ajax
            $('#select-ManagedBy')[0].selectize.addItem(e);
        }
        else if($('.box-section').val() == "Observers") {
            $('#select-Observers')[0].selectize.addOption({ value: e, text: e }); //option can be created manually or loaded using Ajax
            $('#select-Observers')[0].selectize.addItem(e);
        }
        else if($('.box-section').val() == "CRMSection") {
            $('#select-CRMClient')[0].selectize.addOption({ value: e, text: e }); //option can be created manually or loaded using Ajax
            $('#select-CRMClient')[0].selectize.addItem(e);
        }
    }
</script>