@model BaseApp.Entity.AppNotification
@{
    ViewBag.Title = Model.Title;
}


<div class="form-Modal">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@ViewBag.Title</h4>
            <div class="btn-group btn-group-xs" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default" title="Back"><i class="fa fa-angle-left"></i></a>
                <a href="@Model.ActionUrl" class="btn btn-info" title="Go to Action"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <table class="table table-striped table-hover">
                    <tr>
                        <th class="text-right">Notification</th>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <th class="text-right">Office</th>
                        @if (Model.OfficeId.HasValue)
                        {
                            <td><a href="~/Secure/Office/Details/@Model.OfficeId">@Model.Office.Title</a></td>
                        }
                        else
                        {
                            <td>N / A</td>
                        }
                    </tr>
                    <tr>
                        <th class="text-right">Contact</th>
                        <td><a href="~/AccessControl/Contact/Details/@Model.ContactId">@Model.Contact.FullName</a></td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-striped table-hover">
                    <tr>
                        <th class="text-right">Notification Type</th>
                        <td>@Model.Type</td>
                    </tr>
                    <tr>
                        <th class="text-right">Action URL</th>
                        <td><a href="@Model.ActionUrl">@Model.ActionUrl</a></td>
                    </tr>
                    <tr>
                        <th class="text-right">Created On</th>
                        <td>@Model.CreatedOn.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                </table>
            </div>
        </div>
        <hr />
        <p>@Html.Raw(Model.Description)</p>
        <div class="modal-footer text-right">
            <div class="btn-group btn-group-sm" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-angle-left"></i> Back</a>
                <a href="@Model.ActionUrl" class="btn btn-info">Go to Action <i class="fa fa-angle-right"></i></a>
            </div>
        </div>
    </div>
</div>