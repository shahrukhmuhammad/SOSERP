                <table class="table table-striped no-margin">
                    <tr>
                        <td class="text-right">First Name</td>
                        <th>@Model.FirstName</th>
                    </tr>
                    <tr>
                        <td class="text-right">Middle Name</td>
                        <th>@Model.MiddleName</th>
                    </tr>
                    <tr>
                        <td class="text-right">Last Name</td>
                        <th>@Model.LastName</th>
                    </tr>
                    <tr>
                        <td class="text-right">Gender</td>
                        <th>@Model.Gender.ToSpacedTitleCase()</th>
                    </tr>
                    <tr>
                        <td class="text-right">Date of Birth</td>
                        <th>@Model.DateOfBirth.ToShortDateString()</th>
                    </tr>
                    <tr>
                        <td class="text-right">Email</td>
                        <th>@Model.Email</th>
                    </tr>
                    <tr>
                        <td class="text-right">Home Phone</td>
                        <th>@Model.HomePhone</th>
                    </tr>
                    <tr>
                        <td class="text-right">Work Phone</td>
                        <th>@Model.WorkPhone</th>
                    </tr>
                    <tr>
                        <td class="text-right">Updated By</td>
                        <th>@updatedUser.FullName on @Model.UpdatedOn</th>
                    </tr>
                    <tr>
                        <td class="text-right">Created By</td>
                        <th>@createdUser.FullName on @Model.CreatedOn</th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
