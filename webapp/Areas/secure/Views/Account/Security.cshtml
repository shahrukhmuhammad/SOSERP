@model BaseApp.Entity.AppUser
@{
    ViewBag.Title = "Account Security";
}

@if (TempData["SuccessMsg"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Success!</strong> @TempData["SuccessMsg"]
    </div>
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Error!</strong> @TempData["ErrorMsg"]
    </div>
}

<div>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#accountPassword" aria-controls="accountPassword" role="tab" data-toggle="tab">Account Password</a></li>
        <li role="presentation"><a href="#securityQA" aria-controls="securityQA" role="tab" data-toggle="tab">Security Question Answer</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="accountPassword">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <form id="changePassword" class="form-Modal" method="post" action="~/Secure/Account/ChangePassword">
                        <div class="modal-content">
                            <div class="modal-body">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <input id="OldPassword" name="OldPassword" type="password" class="form-control input-sm" placeholder="Old Password" required autofocus />
                                </div>
                                <div class="form-group">
                                    <input id="NewPassword" name="NewPassword" type="password" class="form-control input-sm" placeholder="New Password" required />
                                </div>
                                <div class="form-group">
                                    <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control input-sm" placeholder="Confirm Password" required />
                                </div>
                            </div>
                            <div class="modal-footer text-right">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-close"></i> Cancel / Back</a>
                                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="securityQA">
            <form class="form-Modal frm" method="post" action="~/Secure/Account/UpdateQA">
                <div class="modal-content">
                    <div class="modal-body">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Question 1</label>
                                    <select name="Question1" class="form-control input-sm" required autofocus>
                                        <option value="What was the house number and street name you lived in as a child?" @(Model.Question1 == "What was the house number and street name you lived in as a child?" ? "selected" : "")>What was the house number and street name you lived in as a child?</option>
                                        <option value="What primary school did you attend?" @(Model.Question1 == "What primary school did you attend?" ? "selected" : "")>What primary school did you attend?</option>
                                        <option value="In what town or city was your first full time job?" @(Model.Question1 == "In what town or city was your first full time job?" ? "selected" : "")>In what town or city was your first full time job?</option>
                                        <option value="In what town or city did you meet your spouse/partner?" @(Model.Question1 == "In what town or city did you meet your spouse/partner?" ? "selected" : "")>In what town or city did you meet your spouse/partner?</option>
                                        <option value="What is the middle name of your oldest child?" @(Model.Question1 == "What is the middle name of your oldest child?" ? "selected" : "")>What is the middle name of your oldest child?</option>
                                        <option value="In what town or city did your mother and father meet?" @(Model.Question1 == "In what town or city did your mother and father meet?" ? "selected" : "")>In what town or city did your mother and father meet?</option>
                                        <option value="What is your spouse or partner's mother's maiden name?" @(Model.Question1 == "What is your spouse or partner's mother's maiden name?" ? "selected" : "")>What is your spouse or partner's mother's maiden name?</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Answer 1</label>
                                    <textarea name="Answer1" class="form-control input-sm" rows="3" required>@Model.Answer1</textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Question 2</label>
                                    <select name="Question2" class="form-control input-sm" required>
                                        <option value="What was the house number and street name you lived in as a child?" @(Model.Question2 == "What was the house number and street name you lived in as a child?" ? "selected" : "")>What was the house number and street name you lived in as a child?</option>
                                        <option value="What primary school did you attend?" @(Model.Question2 == "What primary school did you attend?" ? "selected" : "")>What primary school did you attend?</option>
                                        <option value="In what town or city was your first full time job?" @(Model.Question2 == "In what town or city was your first full time job?" ? "selected" : "")>In what town or city was your first full time job?</option>
                                        <option value="In what town or city did you meet your spouse/partner?" @(Model.Question2 == "In what town or city did you meet your spouse/partner?" ? "selected" : "")>In what town or city did you meet your spouse/partner?</option>
                                        <option value="What is the middle name of your oldest child?" @(Model.Question2 == "What is the middle name of your oldest child?" ? "selected" : "")>What is the middle name of your oldest child?</option>
                                        <option value="In what town or city did your mother and father meet?" @(Model.Question2 == "In what town or city did your mother and father meet?" ? "selected" : "")>In what town or city did your mother and father meet?</option>
                                        <option value="What is your spouse or partner's mother's maiden name?" @(Model.Question2 == "What is your spouse or partner's mother's maiden name?" ? "selected" : "")>What is your spouse or partner's mother's maiden name?</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Answer 2</label>
                                    <textarea name="Answer2" class="form-control input-sm" rows="3" required>@Model.Answer2</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer text-right">
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-close"></i> Cancel / Back</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $("#changePassword").validate({
            rules: {
                NewPassword: "required",
                ConfirmPassword: {
                    equalTo: "#NewPassword"
                }
            }
        });
    </script>
}