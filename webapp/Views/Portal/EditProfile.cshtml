@model CRM.Entity.Contact
@{
    ViewBag.Title = "Edit Profile";
}

@section styles{
    <link href="~/Content/Bootstrap/Material-Design-Switch.css" rel="stylesheet" />
}

<div class="reg-page">
    <div class="container">
        <div class="pannel" style="padding-bottom:50px;">
            <form id="frm" method="post">
                @Html.AntiForgeryToken()
                <div class="reg-header">
                    <h2>Edit Profile</h2>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>First Name <span class="color-red">*</span></label>
                            <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" required autofocus />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Middle Name</label>
                            <input type="text" name="MiddleName" class="form-control" value="@Model.MiddleName" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" name="LastName" class="form-control" value="@Model.LastName" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Gender <span class="color-red">*</span></label>
                            <select class="form-control pointer" name="Gender" required>
                                <option value="">--- Select ---</option>
                                <option value="@((int)CRM.Entity.ContactGender.Male)" @(Model.Gender == CRM.Entity.ContactGender.Male ? "selected" : "")>@CRM.Entity.ContactGender.Male</option>
                                <option value="@((int)CRM.Entity.ContactGender.Female)" @(Model.Gender == CRM.Entity.ContactGender.Female ? "selected" : "")>@CRM.Entity.ContactGender.Female</option>
                                <option value="@((int)CRM.Entity.ContactGender.Other)" @(Model.Gender == CRM.Entity.ContactGender.Other ? "selected" : "")>@CRM.Entity.ContactGender.Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Date of Birth <span class="color-red">*</span></label>
                            <input type="date" name="DateOfBirth" class="form-control" value="@Model.DateOfBirth" required />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Home Phone <span class="color-red">*</span></label>
                            <input type="text" name="HomePhone" class="form-control phoneMask" value="@Model.HomePhone" required />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Work Phone</label>
                            <input type="text" name="WorkPhone" class="form-control phoneMask" value="@Model.WorkPhone" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Address Line 1 <span class="color-red">*</span></label>
                            <input type="text" name="AddressLine1" class="form-control" value="@Model.AddressLine1" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Address Line 2</label>
                            <input type="text" name="AddressLine2" class="form-control" value="@Model.AddressLine2" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>ZipCode <span class="color-red">*</span></label>
                            <input type="text" name="AddressLine1" class="form-control" value="@Model.ZipCode" required />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>City <span class="color-red">*</span></label>
                            <input type="text" name="City" class="form-control" value="@Model.City" required />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>State <span class="color-red">*</span></label>
                            <input type="text" name="State" class="form-control" value="@Model.State" required />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Country</label>
                            <select class="form-control pointer" name="Country" required>
                                <option value="">--- Select ---</option>
                                @foreach (var x in Html.CountriesListWithCode())
                                {
                                    <option value="@x.Value" @(Model.Country == x.Value ? "selected" : "")>@x.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="material-switch pull-right">
                                    <input type="checkbox" id="SubscribedForNewsletter" name="SubscribedForNewsletter" value="@(Model.SubscribedForNewsletter ? "true" : "false")" @(Model.SubscribedForNewsletter ? "checked" : "") />
                                    <label for="SubscribedForNewsletter" class="label-success"></label>
                                </div>
                                <h4 class="list-group-item-heading">Newsletters</h4>
                                <small>Signup for newsletter and get updates, and special offers in your inbox.</small>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="material-switch pull-right">
                                    <input type="checkbox" id="SubscribedForUpdates" name="SubscribedForUpdates" value="@(Model.SubscribedForUpdates ? "true" : "false")" @(Model.SubscribedForUpdates ? "checked" : "") />
                                    <label for="SubscribedForUpdates" class="label-success"></label>
                                </div>
                                <h4 class="list-group-item-heading">Announcements</h4>
                                <small>Get announcements, recommendations, and updates about our products, services, software updates, and more.</small>
                            </li>
                        </ul>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-12 text-right">
                        <button class="btn btn-raised btn-primary ripple-effect" type="submit">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>