
@{
    ViewBag.Title = "Login";
}

<div class="reg-page space-sm">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="pannel pad-all">
                    <form id="register-frm" method="post">
                        @Html.AntiForgeryToken()
                        <div class="reg-header">
                            <h2>Please Sign In to Continue</h2>
                            <p>Don't have an account? <a href="~/Portal/Registration">Click here to create one</a></p>
                        </div>
                        <div class="form-group">
                            <label>Email Address <span class="color-red">*</span></label>
                            <input type="email" name="Email" class="form-control" required autofocus />
                        </div>
                        <div class="form-group">
                            <label>Password <span class="color-red">*</span></label>
                            <input type="password" name="Password" class="form-control" required />
                        </div>
                        <div class="row" style="margin-top:30px; margin-bottom:15px;">
                            <div class="col-lg-6 checkbox" style="margin-top:-5px;">
                                <label><input type="checkbox" name="rememberMe" id="rememberMe" value="false" />Remember Me</label>
                            </div>
                            <div class="col-lg-6 text-right">
                                <a href="~/Portal/Recovery" role="button">Need help?</a>
                            </div>
                            <div id="rememberMe-Div" class="col-lg-12" hidden>
                                <select name="rememberMeTime" class="form-control input-sm">
                                    <option value="1 week">1 week</option>
                                    <option value="2 weeks">2 weeks</option>
                                    <option value="Until I sign out manually">Until I sign out manually</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 text-right">
                                <button class="btn btn-raised btn-info ripple-effect fullWidth" type="submit">Sign In</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#rememberMe').change(function () {
            if (this.checked)
                $('#rememberMe-Div').show();
            else
                $('#rememberMe-Div').hide();
        });
    </script>
}